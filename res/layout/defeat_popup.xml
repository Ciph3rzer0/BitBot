<RelativeLayout 
	android:id="@+id/relativeLayout1" 
	android:layout_width="fill_parent" 
	xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="wrap_content">
    <TextView 
    	android:id="@+id/victory_banner" 
    	android:layout_height="wrap_content" 
    	android:layout_alignParentTop="true"
    	android:textSize="23px"
    	android:layout_marginBottom="3px" 
    	android:text="Sorry, your BOT has been defeated..." 
    	android:layout_width="match_parent">
    	</TextView>
    <ImageView 
    	android:src="@drawable/defeat" 
    	android:id="@+id/imageView1" 
    	android:layout_marginRight="5px"
    	android:layout_below="@+id/victory_banner" android:layout_height="wrap_content" android:layout_width="match_parent">
    </ImageView>
    <Button 
	    android:id="@+id/end_btn" 
	    android:layout_below="@id/imageView1" 
	    android:text="Try Again" 
	    android:textSize="18px"
	    android:layout_height="wrap_content" 
	    android:layout_width="match_parent">
    </Button>
</RelativeLayout>
