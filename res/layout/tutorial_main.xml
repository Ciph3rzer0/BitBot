<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_height="wrap_content" android:layout_width="match_parent">
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>
	<Button 
		android:id="@+id/sequence_btn" 
		android:text="Sequence" 
		android:layout_alignParentLeft="true" 
		android:layout_height="90dip" android:layout_width="120dip">
	</Button>
	<Button 
		android:id="@+id/selection_btn" 
		android:layout_below="@+id/sequence_btn" 
		android:text=" Selection" 
		android:layout_alignParentLeft="true" 
		android:layout_height="90dip" android:layout_width="120dip">
	</Button>
	<Button 
		android:id="@+id/iteration_btn" 
		android:layout_below="@+id/selection_btn" 
		android:text=" Iteration " 
		android:layout_alignParentLeft="true" 
		android:layout_height="90dip" android:layout_width="120dip">
	</Button>
	<EditText 
		android:text="Edit Text Here"
		android:id="@+id/editor" 
		android:layout_toRightOf="@+id/selection_btn" 
		android:layout_alignParentTop="true" 
		android:layout_alignBottom="@+id/iteration_btn"
		android:layout_height="wrap_content" 
		android:layout_width="300dip">
	</EditText>
	<Button android:id="@+id/lock_btn" 
		android:text="Lock in Text" 
		android:layout_toRightOf="@+id/editor" 
		android:layout_alignTop="@+id/editor" 
		android:layout_height="69dip" android:layout_width="120dip">
	</Button>
	<Button android:id="@+id/clear_btn" 
		android:text="Clear Text" 
		android:layout_below="@+id/lock_btn" 
		android:layout_alignLeft="@+id/lock_btn"
		android:layout_alignRight="@+id/lock_btn" 
		android:layout_height="69dip" android:layout_width="120dip">
	</Button>
	<Button android:id="@+id/sim_btn" 
		android:text="Simulate" 
		android:layout_below="@+id/clear_btn" 
		android:layout_alignLeft="@+id/clear_btn"
		android:layout_alignRight="@+id/clear_btn" 
		android:layout_height="65dip" android:layout_width="120dip">
	</Button>
	<Button 
		android:id="@+id/back_btn" 
		android:text="Go Back" 
		android:layout_below="@+id/sim_btn" 
		android:layout_alignLeft="@+id/sim_btn" 
		android:layout_alignRight="@+id/sim_btn" 
		android:layout_height="65dip" android:layout_width="120dip">
	</Button>
	
	<SlidingDrawer 
		android:layout_width="wrap_content" 
		android:orientation="horizontal" 
		android:id="@+id/SlidingDrawer" 
		android:handle="@+id/slideHandleButton" 
		android:content="@+id/contentLayout" 
		android:padding="10dip" 
		android:layout_height="400dip">
		<Button 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:id="@+id/slideHandleButton" 
			android:background="@drawable/closearrow">
		</Button>
		<LinearLayout 
			android:layout_width="wrap_content" 
			android:id="@+id/contentLayout" 
			android:orientation="vertical" 
			android:background="#FF191919"
			android:gravity="center|top" 
			android:padding="10dip" 
			android:layout_height="wrap_content">
		<TextView
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:textColor="#00FF00"
		    android:text="Set Tutorial Text Here"
		    android:id="@+id/tv" />
				
		</LinearLayout>
	</SlidingDrawer>
</RelativeLayout>