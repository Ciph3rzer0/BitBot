<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent" android:layout_height="wrap_content">
	
	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_weight="1"/>
	<Button 
		android:id="@+id/sequence_btn" 
		android:text="Sequence" 
		android:layout_alignParentTop="true" android:layout_width="110dip" android:layout_height="75dip">
	</Button>
	<Button 
		android:id="@+id/selection_btn" 
		android:layout_toRightOf="@+id/sequence_btn" 
		android:text=" Selection" 
		android:layout_alignParentTop="true"
		android:layout_width="110dip" android:layout_height="75dip">
	</Button>
	<Button 
		android:id="@+id/iteration_btn" 
		android:text=" Iteration" 
		android:layout_toRightOf="@+id/selection_btn" 
		android:layout_width="110dip" android:layout_height="75dip">
	</Button>
	<EditText 
		android:text="Edit Text Here"
		android:id="@+id/editor" 
		android:layout_below="@+id/sequence_btn"
		android:layout_above="@+id/lock_btn"
		android:layout_height="wrap_content" android:layout_width="match_parent">
	</EditText>
	<Button android:layout_width="110dip" android:layout_height="75dip" android:id="@+id/tools_btn" android:text="Quick Tools" android:layout_toLeftOf="@+id/lock_btn" android:layout_alignTop="@+id/lock_btn" android:layout_alignBottom="@+id/lock_btn"></Button>
	<Button android:layout_width="110dip" android:layout_height="75dip" android:id="@+id/sim_btn" android:text="Simulate" android:layout_alignParentRight="true" android:layout_alignParentBottom="true"></Button>
	<Button android:layout_width="110dip" android:layout_height="75dip" android:id="@+id/lock_btn" android:text="Lock in Text" android:layout_toLeftOf="@+id/sim_btn" android:layout_alignTop="@+id/sim_btn" android:layout_alignBottom="@+id/sim_btn"></Button>
	<SlidingDrawer 
		android:layout_width="wrap_content" 
		android:orientation="horizontal" 
		android:id="@+id/SlidingDrawer" 
		android:handle="@+id/slideHandleButton" 
		android:content="@+id/contentLayout" 
		android:padding="10dip" 
		android:layout_height="400dip">
		<Button 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:id="@+id/slideHandleButton" 
			android:background="@drawable/openarrow">
		</Button>
		<ScrollView 
			android:layout_width="wrap_content" 
			android:id="@+id/contentLayout" 
			android:orientation="vertical" 
			android:background="#FF191919"
			android:gravity="center|top" 
			android:padding="10dip" 
			android:layout_height="wrap_content">
		<TextView
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:textColor="#00FF00"
		    android:id="@+id/tutorial_text" />		
		</ScrollView>
	</SlidingDrawer>
</RelativeLayout>