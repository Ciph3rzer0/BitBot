<?xml version="1.0" encoding="utf-8"?>

<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ide_view_flipper"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:flipInterval="2000">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:paddingTop="8px"
	    android:layout_height="wrap_content" 
	    android:id="@+id/quick_bar">
        <Button 
	        android:text="Sequence" 
	        android:id="@+id/sequence_btn" 
	        android:textSize="10px"
	        android:layout_width="0px" 
	        android:layout_height="70dip"
	        android:layout_weight="1">
        </Button>
        <Button 
	        android:textSize="10px" 
	        android:text="Selection" 
	        android:layout_width="0px" 
	        android:layout_weight="1" 
	        android:layout_height="70dip" 
	        android:id="@+id/selection_btn">
        </Button>
        <Button 
	        android:text="Iteration"
	        android:textSize="10px" 
	        android:id="@+id/iteration_btn"
	        android:layout_width="0px" 
	   		android:layout_height="70dip"
	        android:layout_weight="1">
        </Button>
        <Button 
	        android:text="Quick Tools" 
	        android:textSize="10px"
	        android:id="@+id/tools_btn" 
	        android:layout_width="0px" 
	        android:layout_height="70dip"
	        android:layout_weight="1">
        </Button>
        <Button 
	        android:text="Bot Functions" 
	        android:textSize="10px"
	        android:id="@+id/bot_btn" 
	        android:layout_width="0px" 
	        android:layout_height="70dip"
	        android:layout_weight="1">
        </Button>
    </LinearLayout>
    
    <LinearLayout 
	    android:layout_width="match_parent" 
	    android:layout_below="@+id/quick_bar"
		android:layout_above="@+id/tools_bar"
	    android:id="@+id/edit_bar" 
	    android:layout_height="wrap_content">
	    <EditText 
	      	android:hint="Enter Code Here"
			android:id="@+id/editor" 
			android:autoText="false"
			android:layout_width="match_parent"
			android:inputType="text|textMultiLine"
			android:textSize="18dip"
			android:typeface="monospace"
			android:gravity="top" android:layout_height="match_parent">
        </EditText>  
    </LinearLayout>
    <LinearLayout 
	    android:layout_alignParentBottom="true" 
	    android:layout_width="match_parent" 
	    android:id="@+id/tools_bar" 
	    android:layout_height="wrap_content">
        <HorizontalScrollView 
	        android:id="@+id/horizontalScrollView1" 
	        android:layout_width="match_parent" 
	        android:layout_height="wrap_content">
            <LinearLayout 
	            android:layout_width="match_parent" 
	            android:id="@+id/linearLayout2" 
	            android:layout_height="match_parent" 
	            android:orientation="horizontal">
	        <ImageButton
				android:id="@+id/delete_line"
				android:src="@drawable/delete_line"
				android:layout_width="0px" 
		        android:layout_weight="1" 
		        android:layout_height="70dip" >
			</ImageButton>
			<ImageButton
				android:id="@+id/delete_word"
				android:src="@drawable/delete_word"
				android:layout_width="0px" 
	        	android:layout_weight="1" 
	        	android:layout_height="70dip" >
			</ImageButton>
			<ImageButton 
				android:layout_width="0px" 
		        android:layout_weight="1" 
		        android:layout_height="70dip" 
				android:src="@drawable/move_left"
				android:id="@+id/move_left">
			</ImageButton>
			<ImageButton
				android:id="@+id/move_right" 
				android:src="@drawable/move_right"
				android:layout_width="0px" 
		        android:layout_weight="1" 
		        android:layout_height="70dip">
			</ImageButton>
			<ImageButton
				android:id="@+id/tab_over" 
				android:src="@drawable/tab"
				android:layout_width="0px" 
		        android:layout_weight="1" 
		        android:layout_height="70dip">
			</ImageButton>
			<ImageButton 
				android:layout_width="0px" 
		        android:layout_weight="1" 
		        android:layout_height="70dip" 
				android:src="@drawable/go"
				android:id="@+id/send_btn">
			</ImageButton>		
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout> 
    <SlidingDrawer 
			android:layout_width="wrap_content" 
			android:orientation="horizontal" 
			android:id="@+id/SlidingDrawer" 
			android:handle="@+id/slideHandleButton" 
			android:content="@+id/contentLayout" 
			android:padding="10dip" 
			android:layout_height="wrap_content">
			<Button 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:id="@+id/slideHandleButton" 
				android:background="@drawable/openarrow">
			</Button>
			<ScrollView 
				android:layout_width="wrap_content" 
				android:id="@+id/contentLayout" 
				android:orientation="vertical" 
				android:background="#FF191919"
				android:gravity="center|top" 
				android:padding="10dip" 
				android:layout_height="wrap_content">
			<TextView
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:textColor="#00FF00"
			    android:id="@+id/tutorial_text" />		
			</ScrollView>
		</SlidingDrawer>
</RelativeLayout>

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		>
		
		<LinearLayout
			android:id="@+id/crap001"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="bottom"
			android:layout_alignParentBottom="true"
			>
		
			<Button 
				android:id="@+id/ide_back_to_code_btn" 
				android:text="Code"
				android:layout_width="0px"
				android:layout_weight="1" 
				android:layout_height="wrap_content"
			/>
			
		</LinearLayout>
		
		<TextView
			android:id="@+id/ide_std_out"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:text="View Flipper?!!"
			android:layout_alignBottom="@id/crap001"
		/>
		
	</RelativeLayout>
	
</ViewFlipper>

	