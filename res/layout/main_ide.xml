<?xml version="1.0" encoding="utf-8"?>

<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/ide_view_flipper"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:flipInterval="2000"
 	>

	<RelativeLayout
		android:orientation="vertical"
		android:layout_width="match_parent" android:layout_height="wrap_content">
		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"/>
		<Button 
			android:id="@+id/sequence_btn" 
			android:text="Sequence" 
			android:textSize="9dip"
			android:layout_alignParentTop="true"
			android:layout_height="60dip" android:layout_width="65dip">
		</Button>
		<Button 
			android:id="@+id/selection_btn" 
			android:layout_toRightOf="@+id/sequence_btn" 
			android:text=" Selection" 
			android:textSize="9dip"
			android:layout_alignParentTop="true"
			android:layout_height="60dip" android:layout_width="65dip">
		</Button>
		<Button 
			android:id="@+id/iteration_btn" 
			android:text=" Iteration" 
			android:textSize="9dip"
			android:layout_toRightOf="@+id/selection_btn" 
			android:layout_width="65dip" 
			android:layout_height="60dip">
		</Button>
		<Button 
			android:layout_height="60dip" 
			android:layout_width="65dip" 
			android:text="Quick Tools" 
			android:textSize="9dip"
			android:id="@+id/tools_btn" 
			android:layout_toRightOf="@+id/iteration_btn" 
			android:layout_alignTop="@+id/iteration_btn" 
			android:layout_alignBottom="@+id/iteration_btn">
		</Button>
		<Button 
			android:layout_height="60dip" 
			android:layout_width="65dip" 
			android:text="Bot Function" 
			android:textSize="9dip"
			android:id="@+id/bot_btn" 
			android:layout_toRightOf="@+id/tools_btn" 
			android:layout_alignTop="@+id/tools_btn" 
			android:layout_alignBottom="@+id/tools_btn">
		</Button>
		<EditText 
			android:hint="Enter Code Here"
			android:id="@+id/editor" 
			android:layout_below="@+id/sequence_btn"
			android:layout_above="@+id/quick_bar"
			android:layout_height="wrap_content" 
			android:layout_width="match_parent"
			android:inputType="text|textMultiLine"
			android:textSize="18dip"
			android:typeface="monospace"
			android:gravity="top"/>
		<HorizontalScrollView 
			android:id="@+id/quick_bar" 
			android:layout_alignParentBottom="true"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content">	
		<RelativeLayout 
			android:layout_width="match_parent" 
			android:layout_height="match_parent" 
			android:layout_alignParentBottom="true" 
			android:id="@+id/quick_bar_layout">
			<ImageButton
				android:id="@+id/delete_line"
				android:src="@drawable/delete_line"
				android:layout_height="60dip"
				android:layout_width="65dip">
			</ImageButton>
			 <ImageButton
				android:id="@+id/delete_word"
				android:src="@drawable/delete_word"
				android:layout_toRightOf="@+id/delete_line" 
				android:layout_height="60dip"
				android:layout_width="65dip">
			 </ImageButton>
			<ImageButton 
				android:layout_height="60dip" 
				android:layout_width="65dip" 
				android:src="@drawable/move_left"
				android:layout_toRightOf="@+id/delete_word"
				android:id="@+id/move_left">
			</ImageButton>
			<ImageButton
				android:layout_toRightOf="@+id/move_left" 
				android:id="@+id/move_right" 
				android:src="@drawable/move_right"
				android:layout_height="60dip"
				android:layout_width="65dip">
			 </ImageButton>
			<ImageButton
				android:layout_toRightOf="@+id/move_right" 
				android:id="@+id/tab_over" 
				android:src="@drawable/tab"
				android:layout_height="60dip"
				android:layout_width="65dip">
			 </ImageButton>
			<ImageButton 
				android:layout_height="60dip" 
				android:layout_width="60dip" 
				android:src="@drawable/go"
				android:id="@+id/send_btn"
				android:layout_toRightOf="@+id/tab_over"
				android:layout_alignParentRight="true">
			 </ImageButton>		
		</RelativeLayout>
	</HorizontalScrollView>
		<SlidingDrawer 
			android:layout_width="wrap_content" 
			android:orientation="horizontal" 
			android:id="@+id/SlidingDrawer" 
			android:handle="@+id/slideHandleButton" 
			android:content="@+id/contentLayout" 
			android:padding="10dip" 
			android:layout_height="400dip">
			<Button 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:id="@+id/slideHandleButton" 
				android:background="@drawable/openarrow">
			</Button>
			<ScrollView 
				android:layout_width="wrap_content" 
				android:id="@+id/contentLayout" 
				android:orientation="vertical" 
				android:background="#FF191919"
				android:gravity="center|top" 
				android:padding="10dip" 
				android:layout_height="wrap_content">
			<TextView
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:textColor="#00FF00"
			    android:id="@+id/tutorial_text" />		
			</ScrollView>
		</SlidingDrawer>	
	</RelativeLayout>

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		>
		
		<LinearLayout
			android:id="@+id/crap001"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="bottom"
			android:layout_alignParentBottom="true"
			>
		
			<Button 
				android:id="@+id/ide_back_to_code_btn" 
				android:text="Code"
				android:layout_width="0px"
				android:layout_weight="1" 
				android:layout_height="wrap_content"
			/>
			
		</LinearLayout>
		
		<TextView
			android:id="@+id/ide_std_out"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_weight="1"
			android:text="View Flipper?!!"
			android:layout_alignBottom="@id/crap001"
		/>
		
	</RelativeLayout>
	
</ViewFlipper>