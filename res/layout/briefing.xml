<RelativeLayout android:id="@+id/relativeLayout1" android:layout_width="fill_parent" android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
        <RelativeLayout 
        android:layout_alignParentTop="true" 
        android:layout_height="wrap_content" 
        android:layout_above="@+id/button_bar"
        android:id="@+id/briefing_view" 
        android:layout_width="match_parent">
            <ImageView 
	            android:id="@+id/mission_icon" 
	            android:layout_height="wrap_content" 
	            android:src="@drawable/icon" 
	            android:layout_width="wrap_content" 
	            android:layout_alignParentLeft="true">
            </ImageView>
            <TextView 
	            android:text="TextView" 
	            android:layout_toRightOf="@+id/mission_icon" 
	            android:id="@+id/mission_text" 
	            android:layout_alignTop="@+id/mission_icon" 
	            android:layout_width="match_parent" android:layout_height="match_parent">
            </TextView>
        
        </RelativeLayout>
        <LinearLayout
        android:layout_height="wrap_content" 
        android:layout_alignParentBottom="true" 
        android:id="@+id/button_bar" 
        android:layout_width="match_parent">
            <Button 
	            android:layout_alignParentTop="true" 
	            android:text="Back" 
	            android:id="@+id/back_btn" 
	            android:layout_height="70dip" 
	            android:layout_width="0px"
	            android:layout_weight="1">
            </Button>
              <Button 
	            android:layout_alignParentTop="true" 
	            android:text="Take Mission" 
	            android:id="@+id/mission_btn" 
	            android:layout_height="70dip" 
	            android:layout_width="0px"
	            android:layout_weight="1">
            </Button>
        </LinearLayout>
</RelativeLayout>
