<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:padding="0dip"
	>
	
	<!-- Bot Parts & Stats -->
	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="0dip"
		>
		
		<!-- Bot Selector -->
		<ListView
			android:id="@+id/botSelectorList"
			android:layout_width="60dip"
			android:layout_height="fill_parent"
			android:background="#040433"
		/>
		
		<!-- Bot Stats -->
		<LinearLayout
			android:layout_width="40dip"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:layout_weight=".55"
			android:padding="5dip"
			android:background="#041104"
			>
	
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:text="Kills"
				android:padding="3dip" />
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="45"
				android:gravity="right"
				android:padding="3dip" />
				
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:text="Game Time"
				android:padding="3dip" />
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="3 hours"
				android:gravity="right"
				android:padding="3dip" />
				
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:layout_column="1"
				android:text="K/D Ratio"
				android:padding="3dip" />
			<TextView
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="0.981"
				android:gravity="right"
				android:padding="3dip" />
		</LinearLayout>
				
		<!-- Bot Parts -->
		<LinearLayout
			android:layout_width="140dip"
			android:layout_height="fill_parent"
			android:layout_weight=".45"
			android:orientation="vertical"
			android:background="#110404"
			android:padding="5dip"
			>
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Bot Components"
			/>
			
			<edu.sru.andgate.bitbot.ide.botbuilder.BotComponentView
				android:id="@+id/bb_chassis"
				android:layout_width="wrap_content"
				android:layout_height="?android:attr/listPreferredItemHeight"
			/>
			<edu.sru.andgate.bitbot.ide.botbuilder.BotComponentView
				android:id="@+id/bb_turret"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			/>
		</LinearLayout>
		
	</LinearLayout> <!-- End Bot Parts & Stats -->
	
	<!-- Program Output -->
	<TextView
		android:id="@+id/program_title"
		android:text="Program Data"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="5dip"
		android:layout_marginTop="5dip"
		android:background="#242424"
	/>
	
	<TextView
		android:id="@+id/program_text"
		android:text="Program Hello World\n\tPrint 'Hello World'\nEnd "
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:paddingTop="10dip"
		android:background="#333333"
	/>
	
</LinearLayout>
